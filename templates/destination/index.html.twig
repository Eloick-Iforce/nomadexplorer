{% extends 'base.html.twig' %} {% block title %}Destination index{% endblock %}
{% block body %}
<h1 class="bg-red-500">Destination index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Description</th>
      <th>Lieu</th>
      <th>Pays</th>
      <th>Continent</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for destination in destinations %}
    <tr>
      <td>{{ destination.id }}</td>
      <td>{{ destination.nom }}</td>
      <td>{{ destination.description }}</td>
      <td>{{ destination.lieu ? destination.lieu|json_encode : '' }}</td>
      <td>{{ destination.pays }}</td>
      <td>{{ destination.continent }}</td>
      <td>
        <a href="{{ path('app_destination_show', { id: destination.id }) }}"
          >show</a
        >
        <a href="{{ path('app_destination_edit', { id: destination.id }) }}"
          >edit</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="7">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_destination_new') }}">Create new</a>
{% endblock %}
